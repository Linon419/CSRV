{
  "name": "backtest-tool",
  "version": "1.0.0",
  "description": "潜力区币回测工具 - Cloudflare部署版",
  "scripts": {
    "dev": "npm --prefix react-src run dev:cloudflare",
    "build": "npm --prefix react-src run build:cloudflare",
    "deploy": "npm run build && wrangler pages deploy public",
    "dev:wrangler": "wrangler pages dev public --d1 DB",
    "d1:create": "wrangler d1 create backtest-db",
    "d1:init": "wrangler d1 execute backtest-db --file=./schema.sql"
  },
  "keywords": [
    "crypto",
    "backtest",
    "trading",
    "cloudflare"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "wrangler": "^3.0.0"
  }
}
